{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["email", "name"],
  "maxProperties": 2,
  "properties": {
    "email": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "format": "email"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    }
  }
}
